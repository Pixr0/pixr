<head>
  <title>Pixr: Login</title>
<% include loginheader.ejs %>
</head>



<div class="well loginwell">
  <div class="logodiv">
    <img class="logo" src="https://s3.amazonaws.com/nycdapixr/assets/ui/newlogo.png" />
  </div>

    <% if(locals.success_msg){ %>
      <% for (var i = 0; i < locals.success_msg.length; i++) { %>
          <div class="alert alert-success">
            <a><%= locals.success_msg[i] %></a>
          </div>
      <% } %>
     <% } else{ %>
    <% } %>

    <% if(locals.error_msg){ %>
      <% for (var i = 0; i < locals.error_msg.length; i++) { %>
          <div class="alert alert-danger">
            <a><%= locals.error_msg[i] %></a>
          </div>
      <% } %>
     <% } else{ %>
    <% } %>



<form method="post" action="/login">
<div class="form-group login">
<label>Username</label>
<input type="text" class="form-control" name="username" placeholder="Username">
</div>
<div class="form-group">
<label>Password</label>
<input type="password" class="form-control" name="password" placeholder="Password">
</div>
<button type="submit" class="btn btn-default">Submit</button>

<p id="link">
  Don't have an account? <a href="/register">Sign up for one!</a>
</p>

</div>
